{
  "name": "server",
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/index.ts | pino-pretty -c -C",
    "build": "tsc -p .",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "lint": "eslint ./src --max-warnings 0 && pnpm check-types",
    "lint:fix": "eslint ./src --fix",
    "prettier": "prettier --write ./src"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@hapi/boom": "^10.0.1",
    "@hono/node-server": "^1.13.5",
    "@langchain/anthropic": "^0.3.7",
    "@langchain/community": "^0.3.14",
    "@langchain/core": "^0.3.18",
    "@langchain/google-genai": "^0.1.3",
    "@langchain/groq": "^0.1.2",
    "@langchain/openai": "^0.3.13",
    "@libsql/client": "^0.14.0",
    "@prisma/adapter-libsql": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@whiskeysockets/baileys": "^6.7.9",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.6.9",
    "langchain": "^0.3.5",
    "lodash": "^4.17.21",
    "openai": "^4.71.1",
    "pino": "^9.5.0",
    "prisma": "^5.22.0",
    "qrcode-terminal": "^0.12.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.11.17",
    "color-json": "^3.0.5",
    "dotenv": "^16.4.5",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
